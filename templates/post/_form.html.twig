
{{ form_start(form) }}

    <!-- ********** NICK NAME **********-->
    <div class="row">
        <div class="input-field col s12 l12">
            <i class="material-icons prefix">account_circle</i>
            <input type="text" id="autocomplete-input" class="autocomplete" disabled="true">
            <label for="autocomplete-input">{{user.userName}}</label>
        </div>
    </div> 
    <!-- ********** RATE RANGE **********-->
    <div class="row">
        <div class="input-field col s12 l12">
            <h5><i class="material-icons prefix">star_half</i> Rate</h5>
            <p class="range-field">
                {{ form_widget(form.rate, {'attr' : {'type' : 'range'}}) }}
            </p>
        </div>
    </div>
    <!-- ********** SELECT CATEGORY **********-->
    <h5><i class="material-icons prefix">check</i> Choose a category</h5>
    <div class="col s12 l12">
        {{ form_widget(form.categories)}}
    </div>
  
    <!-- ********** NAME OF **********-->
    <div class="row">
        <div class="input-field col s12 l12">
            <i class="material-icons prefix">Name</i>
            {{ form_label(form.name, 'Name') }}
            {{ form_widget(form.name) }}
        </div>
    </div>
    <!-- ********** ADDRESS **********-->
    <div class="row">
        <div class="input-field col s12 l12">
            <i class="material-icons prefix">address</i>
            {{ form_label(form.address) }}
            {{ form_widget(form.address) }}
        </div>
    </div>
    <!-- ********** PHONE NUMBER **********-->
    <div class="row">
        <div class="input-field col s12 l12">
            <i class="material-icons prefix">phone</i>
            {{ form_label(form.phone_number) }}
            {{ form_widget(form.phone_number) }}
        </div>
    </div>
    <!-- ********** CITY **********-->
    <div class="row">
        <div class="input-field col s12 l12">
            <i class="material-icons prefix">place</i>
            {{ form_label(form.city) }}
            {{ form_widget(form.city) }}
        </div>
    </div>
    <!-- ********** COUNTRY **********-->
    <div class="row">
        <div class="input-field col s12 l12">
            <i class="material-icons prefix">place</i>
            {{ form_label(form.country) }}
            {{ form_widget(form.country) }}
        </div>
    </div>
    <!-- ********** DESCRIPTION **********-->
    <div class="input-field col s12">
        {{ form_widget(form.description, {'attr' : {'class' : 'materialize-textarea', 'id' :  'post_description', 'placeholder' : 'Share your experience with the community !'}}) }}
    </div>

 
    <!-- ********** UPLOAD PHOTO **********-->
    <div class="row">
        <h5><i class="material-icons prefix">vertical_align_bottom</i> Upload a picture</h5>
        <div class="input-field col s12 l12">    
            <div class="file-field input-field">
                <div class="btn brown darken-1">
                    <span>Upload</span>
                    {{ form_widget(form.picture) }}
                    {{ form_label(form.picture) }}
                </div>
                
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="Upload file" />
                </div>
            </div>
        </div>
    </div>
    <!-- ********** BTN **********-->
