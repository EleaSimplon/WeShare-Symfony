{% extends 'base.html.twig' %}

{% block title %}{{ post.name }}{% endblock %}

{% block body %}

    <!-- ********** SECTION 1 HEADER IMG PARALLAX EFFECT  **********-->
    <section class="about-header" style="position:relative;">
        <!-- ********** PARALLAX IMAGE SECTION **********-->
        <div class="parallax-img">
            <div class="parallax-container">
                <div class="parallax">
                    <img src="{{asset('assets/images/picture-post/' ~ post.picture) }}">
                </div>
                <div class="title-post center-align">
                    <h3 style="color:#F5F5F5; font-size:5rem;">{{ post.categories }}</h3>
                    <h3 style="color:#F5F5F5; font-size:7rem;">{{ post.name }}</h3>
                </div>
            </div>
        </div>
        {# Div Overlay color #}
        <div style="position:absolute;top:0; right:0; left:0; bottom:0; z-index:1;opacity:0.33;" class="header-overlay brown lighten-4"></div>
    </section>

    <!-- ********** BUTTON ADD REVIEW **********-->
    <section class="show-btn">
        <div class="container">
        <div class="row">
            <div class="col l6">
            <a class="red lighten-2 btn" href="{{ path ('review_new', {'id': post.id}) }}">Add a review ?? </a>
            </div>
            <div class="col l6">
            <a class="red lighten-2 btn" href="{{ path ('restaurant') }}">Back to list</a>
            </div>
        </div>
        </div>
    
    </section>
       

    <!-- ********** SECTION 2 HEADER IMG PARALLAX EFFECT  **********-->
    <section>
        <div class="card-post">
            <div class="container">
                <div class="row">
                    <div class="col s12 m7 l12">
                        <div class="card center-align">
                            <div class="card-image">
                                {# <img src="{{asset('assets/images/picture-post/' ~ post.picture) }}"> #}
                            </div>
                            <div class="card-title">
                                <h3>{{ post.name }}</h3>
                            </div>
                            <div class="card-content center-align">
                                <p>{{ post.description }}</p>
                                <h4>{{ post.rate }} / 5  <i class="material-icons">star</i></h4>
                                <div class="card-action">
                                    <h5>{{ post.address }}, {{ post.city }}, {{ post.country }}</h5>
                                </div>
                            </div>
                            {% if post.webSite != "" %}
                                <div class="card-action">
                                    <div class="row">
                                        <div class="col l12">
                                            <a href="{{ post.webSite }}"><i class="material-icons">star</i>Link to website</a>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                                {% if post.phoneNumber != "" %}
                                    <div class="card-action">
                                        <div class="row">
                                            <div class="col l12">
                                                <h5><i class="material-icons">contact_phone</i> {{ post.phoneNumber }}</h5>
                                            </div>
                                        </div>
                                    </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </section>

    <!-- ********** SECTION 3 REVIEWS  **********-->
    <section class="reviews-container">
        <div class="container">
            <h3 class="center-align">Reviews</h3>
            <!-- FOR REVIEWS IN REVIEW -->
            <ul class="collection">
                <li class="collection-item avatar">
                <img src="{{asset('assets/images/jean.jpeg')}}" alt="" class="circle">
                <span class="title">Jean</span>
                <p>Review Title</p>
                <p>Description</p>
                <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
                </li>
            </ul>
        </div>
    </section>

   {# <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }} #}
    
{% endblock %}
