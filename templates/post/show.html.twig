{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}

<div class="card-post">
    <div class="container">
        <div class="row">
            <div class="col s12 m7 l12">
                <div class="card">
                    <div class="card-image">
                        <img src="{{asset('assets/images/picture-post/' ~ post.picture) }}">
                    </div>
                    <div class="card-title">
                        <h5>{{ post.categories }}</h5>
                        <h3>{{ post.name }}</h3>
                    </div>
                    <div class="card-content">
                        <p>{{ post.description }}</p>
                        <h4>{{ post.rate }} / 5  <i class="material-icons">star</i></h4>
                        <div class="card-action">
                            <h5>{{ post.address }}</h5>
                            <div class="row">
                                <div class="col l6">
                                    <h5>{{ post.city }}</h5>
                                </div>
                                <div class="col l6">
                                    <h5>{{ post.country }}</h5>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    {% if post.webSite != "" %}
                        <div class="card-action">
                            <div class="row">
                                 <div class="col l12">
                                    <a href="{{ post.webSite }}"><i class="material-icons">star</i>Link to website</a>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                        {% if post.phoneNumber != "" %}
                            <div class="card-action">
                                <div class="row">
                                    <div class="col l12">
                                        <h5><i class="material-icons">star</i>{{ post.phoneNumber }}</h5>
                                    </div>
                                </div>
                            </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

