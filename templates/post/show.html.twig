{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}

    <!-- ********** SECTION 1 HEADER IMG PARALLAX EFFECT  **********-->
    <section class="about-header">
        <div class="header-img">

            <div class="row">
                <div class="col s12 m6 l4 right">
                    <h1>About<br><span>WE SHARE</span></h1>
                </div>
            </div>

        </div> 
    </section>

    <!-- ********** BUTTON ADD REVIEW **********-->
    <section class="show-btn">
        <div class="container">
        <div class="row">
            <div class="col l6">
            <a class="red lighten-2 btn" href="{{ path ('review_new', {'id': post.id}) }}">Add a review ?? </a>
            </div>
            <div class="col l6">
            <a class="red lighten-2 btn" href="{{ path ('restaurant') }}">Back to list</a>
            </div>
        </div>
        </div>
    
    </section>
       

    <!-- ********** SECTION 2 HEADER IMG PARALLAX EFFECT  **********-->
    <section>
        <div class="card-post">
            <div class="container">
                <div class="row">
                    <div class="col s12 m7 l12">
                        <div class="card">
                            <div class="card-image">
                                <img src="{{asset('assets/images/picture-post/' ~ post.picture) }}">
                            </div>
                            <div class="card-title">
                                <h5>{{ post.categories }}</h5>
                                <h3>{{ post.name }}</h3>
                            </div>
                            <div class="card-content">
                                <p>{{ post.description }}</p>
                                <h4>{{ post.rate }} / 5  <i class="material-icons">star</i></h4>
                                <div class="card-action">
                                    <h5>{{ post.address }}</h5>
                                    <div class="row">
                                        <div class="col l6">
                                            <h5>{{ post.city }}</h5>
                                        </div>
                                        <div class="col l6">
                                            <h5>{{ post.country }}</h5>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                            {% if post.webSite != "" %}
                                <div class="card-action">
                                    <div class="row">
                                        <div class="col l12">
                                            <a href="{{ post.webSite }}"><i class="material-icons">star</i>Link to website</a>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                                {% if post.phoneNumber != "" %}
                                    <div class="card-action">
                                        <div class="row">
                                            <div class="col l12">
                                                <h5><i class="material-icons">star</i>{{ post.phoneNumber }}</h5>
                                            </div>
                                        </div>
                                    </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </section>

   {# <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }} #}
{% endblock %}
