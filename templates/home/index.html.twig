{% extends 'base.html.twig' %}

{% block title %}We Share{% endblock %}

{% block body %}

    {#********** SECTION 1 HEADER IMG PARALLAX EFFECT  **********#}
    <section class="header-section">
        <div class="header-img">
            <div class="row">
                <div class="col s12 m6 l4">
                    <h1><span>WE SHARE</span><br>Experiences of travelling</h1>
                    <div class="mouse">
                        <span></span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {#********** SECTION 2 TOP RATED PLACES **********#}
    <section class="carousel-home pt-5 pb-5">
        <!-- **** CAROUSEL ****-->
        <div class="carousel" data-flickity='{ "freeScroll": true, "wrapAround": true }'>
            {% for post in allPost %}
                <div class="carousel-cell">
                    <div class="row">
                        <div class="col s12">
                            <a href="{{ path('post_show', {'id': post.id}) }}">
                                <div class="card hoverable">
                                    <div class="card-image">
                                        <img src="{{asset('assets/images/picture-post/' ~ post.picture) }}">
                                    </div>
                                    <div class="card-content">
                                        <h5>{{ post.name }}</h5>
                                        <p>{{ post.categories }}</p>
                                        <p class="truncate">{{ post.description }}</p>
                                    </div>
                                    {# {% if post.review.rate == 5 %}
                                        <div class="card-rating">
                                            <i class="material-icons">star</i>
                                            <i class="material-icons">star</i>
                                            <i class="material-icons">star</i>
                                            <i class="material-icons">star</i>
                                            <i class="material-icons">star</i>
                                        </div>
                                        {% elseif post.review.rate == 4 %}
                                        <div class="card-rating">
                                            <i class="material-icons">star</i>
                                            <i class="material-icons">star</i>
                                            <i class="material-icons">star</i>
                                            <i class="material-icons">star</i>
                                            <i class="material-icons">star_border</i>
                                        </div>
                                    {% endif %} #}
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </section>

    <!-- ********** SECTION 2 TEXT **********-->
    <section class="home-text">
        <div class="container">
            <div class="home-content">
                <h1><span>FOR THE REAL.</span></h1>
                <h1><span>FOR THE CURIOUS.</span></h1>
                <h1><span>FOR YOU.</span></h1>
            </div>
        </div>
    </section>

    {#********** SECTION 3 BEST OR FIND **********#}
    <section class="share-find">

        <div class="container">
            <div class="row">
                <div class="col s12 m6 l6 share">
                    {# IF CONNECTED -> SHARE // ELSE -> LOGIN #}
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <a href="{{ path ('top_ten') }}">
                            <img src="{{asset('assets/images/share-img.png')}}">
                            <h1><span>TOP RATED</span></h1>
                        </a>
                        {% else %}
                            <a href="{{ path ('app_login') }}">
                                <img src="{{asset('assets/images/connect-share.png')}}">
                                <h1 class="center-align"><span>CONNECT TO SHARE</span></h1>
                            </a>
                    {% endif %} 
                </div>
                <div class="col s12 m6 l6 find">
                    <a href="{{ path ('find') }}">
                        <img src="{{asset('assets/images/find-img.png')}}">
                        <h1><span>FIND</span></h1>
                    </a>
                </div>
            </div>
        </div>

        
    </section>

{% endblock %}
