{% extends 'base.html.twig' %}

{% block title %}Admin All Review{% endblock %}

{% block body %}

    <section class="admin-reviews">
        {# HEADER NAV BAR #}
        <header class='main-nav'>
            <ul>
                <a href="{{ path ('admin')}}">
                    <li>
                    <i class='fa fa-tachometer'></i>
                    <span>Dashboard</span>
                    </li>
                </a>
               <a href="{{ path ('admin_post_show_all')}}">
                    <li>
                    <i class="far fa-file-image"></i>
                    <span>Post</span>
                    </li>
                </a>
                <a href="{{ path ('admin_review_show_all')}}">
                    <li style="background: #525252;">
                    <i class="fas fa-comments"></i>
                    <span>Review</span>
                    </li>
                </a>
            </ul>
        </header>
        {# TABLE SHOW ALL POST #}
        <div class="container content">
            <table class="responsive-table highlight">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Picture</th>
                        <th>Rate</th>
                        <th>Posted At</th>
                    </tr>
                </thead>
                <tbody>
                    {% for review in reviews %}
                        <tr>
                            <td>{{ review.title }}</td>
                            <td>{{ review.description }}</td>
                            <td>{{ review.picture }}</td>
                            <td>{{ review.rate }}</td>
                            <td>{{ review.postedAt ? review.postedAt|date('Y-m-d') : '' }}</td>
                            <td>
                                {# <a style="width:14rem" class="btn brown lighten-2" href="{{ path('admin_customer_show', {'id': client.id}) }}">show more</a>
                                <a style="width:14rem" class="btn brown lighten-1" href="{{ path('client_edit', {'id': client.id}) }}">edit</a> #}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
    
{% endblock %}