{% extends 'base.html.twig' %}

{% block title %}Admin All Post{% endblock %}

{% block body %}

    <section class="admin-posts">
        {# HEADER NAV BAR #}
        <header class='main-nav'>
            <div class="row">
                <ul>
                    <div class="col s6 m6 l3">
                        <a href="{{ path ('admin')}}">
                            <li>
                            <i class='fa fa-tachometer'></i>
                            <span>Dashboard</span>
                            </li>
                        </a>
                    </div>
                    <div class="col s6 m6 l3">
                        <a href="{{ path ('admin_user_show_all')}}">
                            <li>
                            <i class="far fa-user"></i>
                            <span>User</span>
                            </li>
                        </a>
                    </div>
                    <div class="col s6 m6 l3">
                        <a href="{{ path ('admin_post_show_all')}}">
                            <li style="background: #525252;">
                            <i class="far fa-file-image"></i>
                            <span>Post</span>
                            </li>
                        </a>
                    </div>
                    <div class="col s6 m6 l3">
                        <a href="{{ path ('admin_review_show_all')}}">
                            <li>
                            <i class="fas fa-comments"></i>
                            <span>Review</span>
                            </li>
                        </a>
                    </div>
                </ul>
            </div>
        </header>
        {# TABLE SHOW ALL POST #}
        <div class="container content">
            <table class="responsive-table highlight">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Country</th>
                        <th>Picture</th>
                        <th>Web Site</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    {% for post in posts %}
                            <tr data-href="{{ path('admin_post_show', {'id': post.id}) }}">
                                <td>{{ post.categories }}</td>
                                <td>{{ post.name }}</td>
                                <td>{{ post.address }}</td>
                                <td>{{ post.city }}</td>
                                <td>{{ post.country }}</td>
                                <td>{{ post.picture }}</td>
                                <td>{{ post.webSite }}</td>
                                <td>{{ post.phoneNumber }}</td>
                                <td><a class="btn green lighten-4" href="{{ path('admin_post_edit', {'id': post.id}) }}">Edit</a></td>
                                <td>{{ include('admin/post_delete.html.twig') }}</td>
                            </tr>
                        {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
    
{% endblock %}

{# FONCTION JQUERY TO ADD A HREF TO THE TR #}
{% block javascripts %}
    <script>
        $('tr[data-href]').on("click", function() {
            document.location = $(this).data('href');
        });
    </script>

{% endblock %}
