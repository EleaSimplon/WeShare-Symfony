<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}We Share{% endblock %}</title>
        
        {% block stylesheets %}
        {% endblock %}

        <!-- ***** MATERIALIZE FRAMEWORK CSS ***** -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <!-- ***** MATERIALIZE ICON ***** -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <!-- ***** FLICKITY CAROUSEL ***** -->
        <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">

        <!-- ***** MARKDOWN EDITOR DESCRIPTION ***** -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
        
        <!-- ********* FONT AWESOME LINK ********* -->
        <script src="https://kit.fontawesome.com/92add67b23.js" crossorigin="anonymous"></script>
        
        <!-- ***** URL ICON LINK ***** -->
        <link rel="icon" href="{{asset('assets/images/share.png')}}"/>

        <!-- ***** LINK CSS ***** -->
        <link rel="stylesheet" type="text/css" href="{{asset('assets/css/main.css')}}"/>

    </head>
    <body>
        
        {#*********** NAV BAR **********#}
        <nav class="transparent">
            <div class="nav-wrapper">
                <a href="{{ path ('home') }}" class="brand-logo">We Share®</a>   
                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul class="hide-on-med-and-down right" id="nav-mobile">
                    <li><a href="{{ path ('about') }}" class="black-text">About</a></li>
                    <li><a href="{{ path ('post_new')}}" class="black-text">Share</a></li>
                    <li><a href="{{ path ('find') }}" class="black-text">Find</a></li>
                    <li><a href="{{ path ('top_ten') }}" class="black-text">Top Rated</a></li>

                    {# IF CONNECTED LOGOUT ELSE LOGIN #}
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    
                        <li>
                            <a class="btn-floating btn-medium waves-effect waves-light blue lighten-4" href="{{ path('my_profile') }}"><i class="material-icons">account_circle</i></a>
                        </li>

                        <li>
                            <a class="waves-effect waves-light btn-small red lighten-2" href="{{ path('app_logout') }}">Logout</a>
                        </li>

                        {% else %}

                        <li>
                            <a class="btn-floating btn-medium waves-effect waves-light blue lighten-4" href="{{ path('app_login') }}"><i class="material-icons">account_circle</i></a>
                        </li>

                    {% endif %}

                    {# IF NOT CONNECTED REGISTER BTN APPEARS #}
                    {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}

                        <li>
                            <a class="waves-effect waves-light btn red lighten-2" href="{{ path('app_register') }}">Register</a>
                        </li>
                        
                    {% endif %}

                </ul>
            </div>
        </nav> 
        {# TEST NAV BAR RESPONSIVE DOESNT WORK #}
        <ul class="sidenav" id="mobile-demo">
            <li><a href="sass.html">Sass</a></li>
            <li><a href="badges.html">Components</a></li>
            <li><a href="collapsible.html">Javascript</a></li>
            <li><a href="mobile.html">Mobile</a></li>
        </ul>

        <!-- ***** BLOCK BODY ***** -->
        {% block body %}{% endblock %}


        {#*********** FOOTER **********#}
        <footer class="page-footer">
            <div class="container">
                <div class="row">
                    <div class="col l6 s12">
                        <h4 class="white-text">We Share®</h4>
                        <p class="grey-text text-lighten-4">"The miracle is this: The more we share the more we have."
                            <br>— Leonard Nimoy
                        </p>
                    </div>
                    <div class="col l3 s12 offset-l3">
                        <h5 class="white-text">Links <i class="material-icons">link</i></h5>
                        <ul class="footer-links">
                            <li><a class="white-text" href="{{ path('about') }}">About us</a></li>
                            <li><a class="white-text" href="{{ path('find') }}">Find your next trip</a></li>
                            <li><a class="white-text" href="{{ path('post_new') }}">Share your story</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-copyright">
                <div class="container">
                    Made with love by Eléa<i class="material-icons">copyright</i></a>
                </div>
            </div>
        </footer>

        <!-- ***** JQUERY CDN ***** -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        
        <!-- ***** ANIMATION COUNTER UP CDN ***** -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.0/jquery.waypoints.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Counter-Up/1.0.0/jquery.counterup.min.js"></script>


        <!-- ***** MATERIALIZE CDN SCRIPT ***** -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

        <!-- ***** MATERIALIZE CDN SCRIPT ***** -->
        <script src="https://unpkg.com/boxicons@2.0.9/dist/boxicons.js"></script>

        <!-- ***** FLICKITY CAROUSEL ***** -->
        <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>

        <!-- ***** MARKDOWN EDITOR DESCRIPTION ***** -->
        <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    

        <!--JavaScript at end of body for optimized loading-->
        <!-- ***** JS SCRIPT ***** -->
        <script src="{{asset('assets/js/carousel.js')}}"></script>
        <script src="{{asset('assets/js/materialize.js')}}"></script>
        <script src="{{asset('assets/js/display_password.js')}}"></script>
        <script src="{{asset('assets/js/hidden-cat.js')}}"></script>
        <script src="{{asset('assets/js/count-animation.js')}}"></script>
        <script src="{{asset('assets/js/parallax.js')}}"></script>
        <script src="{{asset('assets/js/navbar-responsive.js')}}"></script>

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </body>
</html>
