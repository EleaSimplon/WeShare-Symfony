<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}We Share{% endblock %}</title>
        
        {% block stylesheets %}
        {% endblock %}

        <!-- ***** MATERIALIZE FRAMEWORK CSS ***** -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <!-- ***** MATERIALIZE ICON ***** -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!-- ***** FLICKITY CAROUSEL ***** -->
        <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
        <!-- ***** MARKDOWN EDITOR DESCRIPTION ***** -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
        <!-- ********* FONT AWESOME LINK ********* -->
        <script src="https://kit.fontawesome.com/92add67b23.js" crossorigin="anonymous"></script>
        <!-- ***** URL ICON LINK ***** -->
        <link rel="icon" href="{{asset('assets/images/WS-logo.png')}}"/>
        <!-- ***** LINK CSS ***** -->
        <link rel="stylesheet" type="text/css" href="{{asset('assets/css/main.css')}}"/>

    </head>
    <body>
        
        {#*********** NAV BAR **********#}
        <nav class="transparent">
            <div class="nav-wrapper">
                <a href="{{ path ('home') }}" class="brand-logo">We Share®</a>   
                <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul class="hide-on-med-and-down right" id="nav-desk">
                    <li><a href="{{ path ('about') }}" class="black-text">About</a></li>
                    <li><a href="{{ path ('find') }}" class="black-text">Find</a></li>
                    <li><a href="{{ path ('top_ten') }}" class="black-text">Top Rated</a></li>

                    {# IF CONNECTED LOGOUT ELSE LOGIN #}
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    
                        <li class="nav-profile">
                            <a class="btn-floating btn-medium waves-effect waves-light brown lighten-3" href="{{ path('my_profile') }}"><i class="material-icons">account_circle</i></a>
                        </li>

                        <li class="nav-logout">
                            <a class="waves-effect waves-light btn-small blue-grey darken-4" href="{{ path('app_logout') }}">Logout</a>
                        </li>

                        {% else %}

                        <li class="nav-login">
                            <a class="btn-floating btn-medium waves-effect waves-light brown lighten-3" href="{{ path('app_login') }}"><i class="material-icons">account_circle</i></a>
                        </li>

                    {% endif %}

                    {# IF NOT CONNECTED REGISTER BTN APPEARS #}
                    {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}

                        <li class="nav-register">
                            <a class="waves-effect waves-light btn blue-grey darken-4" href="{{ path('app_register') }}">Register</a>
                        </li>
                        
                    {% endif %}

                </ul>
            </div>
        </nav> 
        {# NAV BAR RESPONSIVE #}
        <ul class="sidenav" id="nav-mobile">
            <a href="{{ path ('home') }}" class="brand-logo">We Share®</a> 
            <li><a href="{{ path ('about') }}" class="black-text">About</a></li>
            <li><a href="{{ path ('find') }}" class="black-text">Find</a></li>
            <li><a href="{{ path ('top_ten') }}" class="black-text">Top Rated</a></li>
            {# IF CONNECTED LOGOUT ELSE LOGIN #}
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            
                <li class="nav-mobile-profile">
                    <a class="btn-small btn-medium waves-effect waves-light brown lighten-3" href="{{ path('my_profile') }}">My Profile</a>
                </li>

                <li class="nav-mobile-logout">
                    <a class="waves-effect waves-light btn-small blue-grey darken-4" href="{{ path('app_logout') }}">Logout</a>
                </li>

                {% else %}

                <li class="nav-mobile-login">
                    <a class="btn-small btn-medium waves-effect waves-light brown lighten-3" href="{{ path('app_login') }}">Login</a>
                </li>

            {% endif %}

            {# IF NOT CONNECTED REGISTER BTN APPEARS #}
            {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}

                <li class="nav-mobile-register">
                    <a class="waves-effect waves-light btn blue-grey darken-4" href="{{ path('app_register') }}">Register</a>
                </li>
                
            {% endif %}
        </ul>

        <!-- ***** BLOCK BODY ***** -->
        {% block body %}{% endblock %}


        {#*********** FOOTER **********#}
        <footer class="section-footer">
            <div class="container">
                {# QUOTE #}
                <div class="row">
                    <h4 class="white-text">We Share®</h4>
                    <p class="grey-text text-lighten-4">"The miracle is this: The more we share the more we have."
                        <br>— Leonard Nimoy
                    </p>
                </div>
                <div class="row footer-links">
                    <div class="row">
                        <a class="white-text" href="{{ path('about') }}">ABOUT US <span></span></a>
                        <a class="white-text" href="{{ path('find') }}">FIND YOUR NEXT TRIP <span></span></a>
                        <a class="white-text" href="{{ path('top_ten') }}">TOP TEN</a>
                    </div>
                </div>
            </div>
            <div class="footer-copyright">
                <div class="container">
                    {# FOLLOW US #}
                        <div class="footer-social-net">
                            <a href="https://www.instagram.com/leonardodicaprio/?hl=fr" target="_blank"><i class="fa fa-instagram"></i></a>
                            <a href="#" target="_blank"><i class="fa fa-facebook"></i></a>
                            <a href="#" target="_blank"><i class="fa fa-twitter"></i></a>
                            <a href="#" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                </div>
            </div>
        </footer>

        <!-- ***** JQUERY CDN ***** -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <!-- ***** ANIMATION COUNTER UP CDN ***** -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.0/jquery.waypoints.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Counter-Up/1.0.0/jquery.counterup.min.js"></script>
        <!-- ***** MATERIALIZE CDN SCRIPT ***** -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <!-- ***** MATERIALIZE CDN SCRIPT ***** -->
        <script src="https://unpkg.com/boxicons@2.0.9/dist/boxicons.js"></script>
        <!-- ***** FLICKITY CAROUSEL ***** -->
        <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
        <!-- ***** MARKDOWN EDITOR DESCRIPTION ***** -->
        <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

        <!--JavaScript at end of body for optimized loading-->
        <!-- ***** JS SCRIPT ***** -->
        <script src="{{asset('assets/js/materialize.js')}}"></script>
        <script src="{{asset('assets/js/display_password.js')}}"></script>
        <script src="{{asset('assets/js/count-animation.js')}}"></script>
        <script src="{{asset('assets/js/parallax.js')}}"></script>

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </body>
</html>