{% extends 'base.html.twig' %}

{% block body %}

    <!-- ********** SECTION 1 HEADER WITH TEXT **********-->
    <section class="header-find">
        <div class="header-img">
            <div class="row">
                <div class="col s12 m6 l3 left">
                    <img src="{{asset('assets/images/cactus.png')}}" alt="">
                </div>
                <div class="col s12 m6 l9">
                    <h1><span>Need Inspiration ?</span><br>View our rated categories ...</h1>
                </div>
            </div>
        </div> 
    </section>

    <!-- ********** SECTION 2 SEARCH BAR **********-->
    <section class="search-bar">
        <div class="container">
            <div class="row">
                <div class="col 6">
                    <div class="nav-wrapper">
                        <form>
                            <div class="input-field">
                            <input id="search" type="Search" placeholder="search" required>
                            <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                            <i class="material-icons">close</i>
                            </div>
                        </form>
                    </div>
                </div>
            </div>   
        </div>
    </section>
    
    <!-- ********** BUTTON BACK TO CATEGORIES **********-->
    <div class="btn-bck-cat center-align">
        <a class="btn red lighten-2 btn" href="{{ path ('find') }}">Back to categories</a>
    </div>

    <!-- ********** SECTION 4 RESTAURANTS CATEGORY **********-->
    <section class="card-restaurant">
        <div class="container">
            <div class="row">
                {% for post in allRestau %}
                    <div class="col s12 m12 l6">
                        <div class="card-test">
                            <div class="card">
                                <div class="card-image">
                                    <img src="{{asset('assets/images/picture-post/' ~ post.picture) }}">
                                </div>
                                <div class="card-title">
                                    <h5>{{ post.categories }}</h5>
                                    <a class="btn-show red lighten-2 btn" href="{{ path('post_show', {'id': post.id}) }}">show</a>
                                    <h3>{{ post.name }}</h3>
                                </div>
                                <div class="card-content">
                                    <p>{{ post.description }}</p>
                                    <h4>{{ post.rate }} / 5  <i class="material-icons">star</i></h4>
                                    <div class="card-action">
                                        <div class="row">
                                            <div class="col l12">
                                                <h5>{{ post.address }}, {{ post.city }}, {{ post.country }}</h5>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                                {% if post.webSite != "" %}
                                    <div class="card-action">
                                        <div class="row">
                                            <div class="col l12">
                                                <a href="{{ post.webSite }}"><i class="material-icons">star</i>Link to website</a>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                                {% if post.phoneNumber != "" %}
                                    <div class="card-action">
                                        <div class="row">
                                            <div class="col l12">
                                                <h5><i class="material-icons">star</i>{{ post.phoneNumber }}</h5>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            {{ knp_pagination_render(allRestau) }}
        </div>
    </section>

{% endblock %}