                                                    <h5><i class="material-icons">star</i>{{ post.phoneNumber }}</h5>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>

                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ********** DESTINATIONS **********-->
        <div id="divDesti" style="display:none;" class="answer_list" >
            <div class="card-post">
                <div class="container">
                    <div class="row">
                        <div class="col s12 m7 l12">
                            {% for post in allDesti %}
                            
                                <div class="card">
                                    <div class="card-image">
                                        <img src="{{asset('assets/images/picture-post/' ~ post.picture) }}">
                                    </div>
                                    <div class="card-title">
                                        <h5>{{ post.categories }}</h5>
                                        <h3>{{ post.name }}</h3>
                                    </div>
                                    <div class="card-content">
