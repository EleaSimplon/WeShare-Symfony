{% extends 'base.html.twig' %}

{% block body %}

    <section class="section-find">
        <!-- ********** SECTION 1 HEADER WITH TEXT **********-->
        <section class="header-find">
            <div class="header-img">
                <div class="row">
                    <div class="col s12 m6 l3 left">
                        <img src="{{asset('assets/images/cactus.png')}}" alt="">
                    </div>
                    <div class="col s12 m6 l9">
                        <h1><span>Need Inspiration ?</span><br>View our rated categories ...</h1>
                    </div>
                </div>
            </div> 
        </section>

        <!-- ********** SECTION 2 CATEGORIES + IMG LIKE TO PAGES **********-->
        <section class="categories">
            <div class="row center">
                <h3>Click on the category to discover !</h3>
                <div class="col s12 m6 l4">
                    <a href="{{ path ('restaurant') }}">
                        <h3 id="btnRestau" name="answer"><span>Restaurants</span><box-icon name='pointer'></box-icon></h3>
                        <img src="{{asset('assets/images/restaurant.png')}}" alt="restaurant">
                    </a>
                </div>
                <div class="col s12 m6 l4">
                    <a href="{{ path ('activity') }}">
                        <h3 id="btnActiv" name="answer"><span>Activities</span><box-icon name='pointer'></box-icon></h3>
                        <img src="{{asset('assets/images/activity.png')}}" alt="activity">
                    </a>
                </div>
                <div class="col s12 m6 l4">
                    <a href="{{ path ('destination') }}">
                        <h3 id="btnDesti" name="answer"><span>Destinations</span><box-icon name='pointer'></box-icon></h3>
                        <img src="{{asset('assets/images/destination.png')}}" alt="destination">
                    </a>
                </div>
            </div>
        </section>

        <!-- ********** CHANGE FAKE SECTION **********-->
        <section class="about-numbers">
            <div class="container">
                <div class="numbers">
                    <div class="row">
                        <div class="col s12 center">
                            <h1><span>We already shared about...</span></h1>
                        </div>
                    </div>
                    <!--   Icon Section   -->
                    <div class="row">
                        <div class="col s12 m4 l4">
                            <div class="icon-block center">
                                <img src="{{asset('assets/images/restau.png')}}">

                                {% set totalPostRestau = 0 %}

                                {% for postRestau in allRestau %}

                                    {% set totalPostRestau = totalPostRestau + 1 %}

                                {% endfor %}
                                
                                <h3 class="center count-animation">{{totalPostRestau}}</h3>
                                <p class="light">Restaurants</p>
                            </div>
                        </div>
                        <div class="col s12 m4 l4">
                            <div class="icon-block center">
                                <img src="{{asset('assets/images/acti.png')}}">
                
                                {% set totalPostActi = 0 %}

                                {% for postActi in allActiv %}

                                    {% set totalPostActi = totalPostActi + 1 %}

                                {% endfor %}
                                <h3 class="center count-animation">{{totalPostActi}}</h3>
                                <p class="light">Activities</p>
                            </div>
                        </div>
                        <div class="col s12 m4 l4">
                            <div class="icon-block center">
                                <img src="{{asset('assets/images/desti.png')}}">

                                {% set totalPostDesti = 0 %}

                                {% for postDesti in allDesti %}

                                    {% set totalPostDesti = totalPostDesti + 1 %}

                                {% endfor %}
                            
                                <h3 class="center count-animation">{{totalPostDesti}}</h3>
                                <p class="light">Destinations</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>

{% endblock %}