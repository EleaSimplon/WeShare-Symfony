{% extends 'base.html.twig' %}

{% block body %}

    <!-- ********** SECTION 1 TABS USER PROFILE  **********-->
    <section style="margin-top:5rem" class="user-profile">

        <div class="row">
            <div class="col s12">
                <ul class="tabs">
                    <li class="tab col s3"><a class="active" href="#test1">Informations</a></li>
                    <li class="tab col s3"><a href="#test2">Reviews</a></li>
                </ul>
            </div>
            <!-- ****** TABS 1 PROFILE INFOS  ******-->
            <div id="test1" class="col s12">
                <div class="container">
                    <div class="card my-profile">
                        <h3>My profile :</h3>
                        <div class="row">
                            <img src="{{asset('assets/images/round.png')}}">
                        </div>
                        <div class="row">
                            <h3>{{ app.user.username }}</h3>
                        </div>
                        <div class="row">
                            <h3>About me</h3>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ut, in? Debitis suscipit ab fugiat. Dolorem sunt, ut mollitia fugiat non expedita quam, quisquam necessitatibus, dicta error est earum nobis adipisci.</p>
                        </div>
                        <div class="row">
                            <h3>Email</h3>
                            <input type="email" value="{{ app.user.email }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required disabled autofocus>
                        </div>
                        <div class="row">
                        {# IF REVIEW = 1 WRITE REVIEW W/OUT AN "S" #}
                        {% if countReview == 1 %}
                            <h3>Review</h3>
                            <h4>{{ countReview }}</h4>
                            {% else %}
                            <h3>Review</h3>
                            <h4>{{ countReview }}</h4>
                        {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <!-- ****** TABS 2 USER'S REVIEWS  ******-->
            <div id="test2" class="col s12">
                <div class="container">
                    <h5>Your reviews</h5>
                    <ul class="collapsible">
                        <li>
                            <div class="collapsible-header">
                            {% for review in allReview %}
                                <h4>{{review.title}} </h4>
                                <h4> {{review.rate}} / 5 <i class="material-icons">star</i></h4>
                            </div>
                            <div class="collapsible-body"><span>{{review.description}}</span></div>
                            {% endfor %}
                        </li>
                    </ul>
                </div>
            </div>
            
        </div>
    </section>

{% endblock %}