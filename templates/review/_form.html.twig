{{ form_start(form) }}

    <!-- ********** NICK NAME **********-->
    <div class="row">
        <div class="input-field col s12 l12">
            <i class="material-icons prefix">account_circle</i>
            <input type="text" id="autocomplete-input" class="autocomplete" disabled="true">
            <label for="autocomplete-input">{{user.userName}}</label>
        </div>
    </div> 
    <!-- ********** RATE RANGE **********-->
    <div class="row">
        <div class="input-field col s12 l12">
            <h5><i class="material-icons prefix">star_half</i> Rate</h5>
            <p class="range-field">
                {{ form_widget(form.rate, {'attr' : {'type' : 'range'}}) }}
            </p>
        </div>
    </div>
    <!-- ********** TITLE **********-->
    <div class="row">
        <div class="input-field col s12 l12">
            <i class="material-icons prefix">title</i>
            {{ form_label(form.title, 'Title') }}
            {{ form_widget(form.title, {'attr' : {'class' : 'validate', 'id' : 'last_name'}}) }}
        </div>
    </div>
    <!-- ********** DESCRIPTION **********-->
    <div class="input-field col s12">
        {{ form_widget(form.description, {'attr' : {'class' : 'materialize-textarea', 'placeholder' : 'Share your experience with the community !'}}) }}
    </div>
    <!-- ********** UPLOAD PHOTO **********-->
    <div class="row">
        <h5><i class="material-icons prefix">vertical_align_bottom</i> Upload a picture</h5>
        <div class="input-field col s12 l12">    
            <div class="file-field input-field">
                <div class="btn brown darken-1">
                    <span>Upload</span>
                    {{ form_widget(form.picture) }}
                    {{ form_label(form.picture) }}
                </div>
                
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="Upload file" />
                </div>
            </div>
        </div>
    </div>
    <!-- ********** BTN **********-->
    <div class="row">
        <div class="input-field col s12 l12">    
        <button class="btn btn-large waves-effect waves-light brown darken-2 col s12" style="margin-top: 20px;" type="submit" name="action">
            {{ button_label|default('Save') }}
            <i class="material-icons right">send</i>
        </button>
        </div>
    </div>

{{ form_end(form) }}